# Development Dockerfile for fast development
FROM rust:1.75

WORKDIR /app

# Install additional development tools
RUN apt-get update && apt-get install -y \
    git \
    curl \
    vim \
    && rm -rf /var/lib/apt/lists/*

# Copy project
COPY . .

# Pre-compile dependencies for caching
RUN cargo fetch

# Default: run shell for development
CMD ["/bin/bash"]

